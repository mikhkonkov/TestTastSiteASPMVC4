@model TestTask.WebUI.Models.RegistrationModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutSigIn.cshtml";
    
}

<div class="form-signin">
    @using (Html.BeginForm()) {
        <h2 class="form-signin-heading">Registration</h2>
        @Html.ValidationSummary(true)

        @Html.ValidationMessageFor(m => m.FirstName);
        @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "Firstname" });

        @Html.ValidationMessageFor(m => m.LastName);
        @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Lastname" });

        @Html.ValidationMessageFor(m => m.Email);
        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email address" });

        @Html.ValidationMessageFor(m => m.Password);
        @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password", @type = "password" });

        @Html.ValidationMessageFor(m => m.PasswordConfirm);
        @Html.TextBoxFor(m => m.PasswordConfirm, new { @placeholder = "Password confirm", @type = "password" });

        <label class="help-block">Date birth</label>
        <div class="input-prepend date" id="dp" data-date="01.01.2013" data-date-format="dd.mm.yyyy">
            @Html.ValidationMessageFor(m => m.DateBirth)
            <input class="add-on data-contro" type="text" placeholder="Дата рождения" value="01.01.2013" id="DateBirth" name="DateBirth">
        </div>
        
        <label class="control-label" for="FirstName">
            <img src="@Url.Action("Captcha", "Registration")" alt="captcha" />
        </label>
        @Html.ValidationMessageFor(m => m.Captcha);
        @Html.TextBoxFor(m => m.Captcha, new { @placeholder = "Captcha"});
        <input type="submit" class="btn btn-large btn-primary" value="Registrate" />
        
    }
</div>

